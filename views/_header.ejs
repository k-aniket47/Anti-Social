<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/'>
                    Anti Social
                </a>
            </p>
        </div>
    
        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                <li>
                    <a href="/users/profile/<%= user.id %>"><button type="button" class="btn btn-light"><%= user.name %></button></a>
                </li>
                <li>
                    <a href="/users/sign-out"><button type="button" class="btn btn-light">sign out</button></a>
                </li>
                <% }else{ %>
                <li>
                    <a href="/users/sign-up"><button type="button" class="btn btn-light">sign-up</button></a>
                </li>
                <li>
                    <a href="/users/sign-in"><button type="button" class="btn btn-light">sign-in</button></a>
                </li>
        
                <% } %>
            </ul>
        </div>
    </nav>
 


</header>